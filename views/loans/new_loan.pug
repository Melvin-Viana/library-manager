extends ../layout

block content
    h1 New Loan
    form(method='post')
        p
            label(for='book_id') Book
            select#book_id(name='book_id',required, aria-required="true")
                option(value="") Select a Book
                each book in books
                    option(value=book.id) #{book.title}
        p
            label(for='patron_id') Patron
            select#patron_id(name="patron_id" required aria-required="true")
                option(value="") Select a Patron
                each patron in patrons
                    option(value=patron.id) #{patron.first_name} #{patron.last_name}
        p
            label(for='loaned_on') Loaned on:
            input#loaned_on(type='text', name="loaned_on" value=today)
        p
            label(for='return_by') Return by:
            input#return_by(type='text' name="return_by" value=dueDate)
        p
            input(type='submit', value='Create New Loan')
            if errors
                    h3 Invalid input, see errors below:
                    ul
                        each error in errors
                            li(class="error") #{error.message}
